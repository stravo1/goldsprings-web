---
import { Img } from "astro-imagetools/components";
const { title = "Sample", imgSrc, link } = Astro.props;
---

<section class="relative h-40 w-full bg-orange-200 rounded-md">
  <a href={`/${link}`}
    ><div
      class="bg-black bg-opacity-40 rounded-lg w-full h-full absolute flex justify-center items-center p-6 font-bold text-xl text-amber-50"
    >
      {title}
    </div></a
  >

  <Img
    layout={"fill"}
    attributes={{
      img: {
        class: "h-40 w-full object-cover rounded-lg",
      },
    }}
    src={imgSrc}
    loading={"lazy"}
    decoding={"async"}
    alt={`${title} image`}
  />
</section>
