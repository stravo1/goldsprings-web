---
import { Image } from "@astrojs/image/components";
import bday from "../images/category-images/catering.png";
const { title = "Sample", imgSrc = bday, link } = Astro.props;
---

<section class="relative h-40 w-full bg-orange-200 my-4 rounded-md">
  <a href={`/${link}`}
    ><div
      class="bg-black bg-opacity-40 rounded-lg w-full h-full absolute flex justify-center items-center p-6 font-bold text-xl text-amber-50"
    >
      {title}
    </div></a
  >

  <Image
    class="h-40 w-full object-cover rounded-lg"
    src={imgSrc}
    alt={`${title} image`}
  />
</section>
