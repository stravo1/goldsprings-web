---
import { Image } from "@astrojs/image/components";
import hero from "../images/hero.jpg";
const { title, imgSrc = hero, link = "/" } = Astro.props;
---

<div class="relative w-full h-52 rounded-md">
  <a href={`/${link}`}>
    <Image
      class="w-full h-full object-cover rounded-md"
      src={imgSrc}
      alt="Card Image"
    /></a
  >
  <div
    class="absolute bottom-0 right-0 p-4 text-white text-center bg-black bg-opacity-50 rounded-md"
  >
    <p class="text-lg font-medium">{title}</p>
  </div>
</div>
