---
import { Img } from "astro-imagetools/components";
import hero from "../images/hero.jpg";
const { title, imgSrc = hero, link = "/" } = Astro.props;
---

<div class="relative w-full h-52 rounded-md">
  <a href={`/${link}`}>
    <div class="transparent absolute w-full h-full"></div>
    <Img
      layout={"fill"}
      attributes={{
        img: {
          class: "w-full h-full object-cover rounded-md",
        },
      }}
      src={imgSrc}
      loading={"lazy"}
      decoding={"async"}
      alt={`${title} image`}
    />
    <div
      class="absolute bottom-0 right-0 p-4 text-white text-center bg-black bg-opacity-50 rounded-md w-full md:w-fit"
    >
      <p class="text-lg font-medium">{title}</p>
    </div></a
  >
</div>
