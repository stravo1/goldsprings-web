---
import { Image } from "@astrojs/image/components";
import logo from "../images/logo.jpg";
import email from "../images/send.png";
---

<section class="absolute w-full z-50">
  <nav class="flex p-4 md:p-8 font-bold text-lg text-amber-50">
    <div class="basis-1/2">
      <a href="/">
        <div class="flex gap-2 justify-start items-center">
          <Image class="w-9 object-cover rounded-lg" src={logo} alt="logo" />
          Gold Springs
        </div>
      </a>
    </div>
    <div class="flex basis-1/2 justify-end items-center text-amber-50">
      <a href="/contact"><Image class="w-6 h-6" src={email} alt="logo" /></a>
    </div>
  </nav>
</section>
