---
import TopPanel from "./TopPanel.astro";
import { Image } from "@astrojs/image/components";
import hero from "../images/hero.jpg";
const { imgSrc = hero, title, subTitle } = Astro.props;
---

<section class="hero h-[50vh] lg:h-[60vh] relative">
  <div class="grad absolute w-full h-full flex flex-col">
    <TopPanel class="absolute" />
    <div
      class="flex h-full p-4 md:p-8 justify-start items-center text-amber-100 font-bold md:font-black text-2xl md:text-4xl lg:text-5xl"
    >
      <div class="basis-5/6 md:basis-2/3">
        <div>
          {title}
          <!-- <br />
            <div class="hidden md:block">
              Unique and Memorable Event Planning
            </div> -->
        </div>
        <div
          class="font-medium md:font-semibold text-base md:text-xl lg:text-2xl mt-2 md:mt-6"
        >
          {subTitle}
        </div>
      </div>
    </div>
  </div>
  <Image
    class="h-[50vh] lg:h-[60vh] object-cover"
    src={imgSrc}
    alt="hero-image"
  />
</section>
