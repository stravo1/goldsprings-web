---
import Hero from "../components/Hero.astro";
import Layout from "../layouts/Layout.astro";
import Contact from "../components/Contact";
---

<Layout onHome={true}>
  <Hero
    title="Contact us"
    imgSrc="/src/images/contact.jpg"
    subTitle="Let us handle the planning, coordination and execution, while you to sit back and enjoy your special day."
  />
  <section class="m-4 lg:m-6 flex justify-center items-center">
    <div>
      <div class="font-medium text-amber-900 text-base my-6">
        <h2 class="font-bold text-xl">See you soon!</h2>
        Reach us by phone or email by filling out the form on this page.
      </div>

      <div class="md:min-w-[50vw]">
        <Contact client:idle />
        <div
          class="my-8 border-t-2 relative border-amber-700 flex items-center justify-center lg:hidden"
        >
          <div class="px-4 absolute bg-amber-50">
            <span class="text-amber-900 font-semibold">OR</span>
          </div>
        </div>

        <a href="tel:+919830325023" class="lg:hidden"
          ><button
            class="bg-amber-900 w-full lg:w-60 rounded-lg p-4 text-amber-200 my-4 font-bold"
            >Call Us</button
          ></a
        >
      </div>
    </div>
  </section>
</Layout>
